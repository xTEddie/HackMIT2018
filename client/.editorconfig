# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.json]
indent_style = space
indent_size = 2

[*.html, *.js, *.jsx]
indent_style = space
indent_size = 2

[*.scss, *.sass, *.css]
indent_style = space
indent_size = 2
